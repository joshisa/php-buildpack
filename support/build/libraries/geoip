#!/usr/bin/env bash
# Build Path: /app/.heroku/php/
# Build Deps: php-5.5.11

OUT_PREFIX=$1

# fail hard
set -o pipefail
# fail harder
set -eux

DEFAULT_VERSION="1.4.8"
dep_version=${VERSION:-$DEFAULT_VERSION}
dep_dirname=GeoIP
dep_archive_name=${dep_dirname}.tgz
dep_url=http://geolite.maxmind.com/download/geoip/api/c/${dep_archive_name}

echo "-----> Building ext/geoip ${dep_version}..."

curl -L ${dep_url} | tar xz

pushd ${dep_dirname}-${dep_version}
export PATH=${OUT_PREFIX}/bin:${PATH}
./configure
make
# php was a build dep, and it's in $OUT_PREFIX. nuke that, then make install so all we're left with is the extension
rm -rf ${OUT_PREFIX}/*
make install
popd

echo "-----> Done."
